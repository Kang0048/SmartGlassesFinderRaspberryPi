VOSK_MODEL_DIR = "/home/pi/models/vosk-model-small-en-us"  # or "...-0.15"

# YOLO ì„¤ì •
REPO_DIR = "/home/pi/yolo-object-matcher/yolov5"
WEIGHTS  = "/home/pi/yolo-object-matcher/yolov5n.pt"
IMG_SIZE = 640
PAD = 0.05

# ì˜¤ë””ì˜¤ ì„¤ì •
SAMPLE_RATE = 16000
BLOCKSIZE   = 4000

